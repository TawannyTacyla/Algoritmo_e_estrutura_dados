# Contador de Vogais e Consoantes

print("ğŸ”¤ Contador de letras existentes na sua frase")
print("-" * 40)

# Entrada de dados: o usuÃ¡rio digita a frase
# .lower() ajuda a padronizar a verificaÃ§Ã£o
frase = input("Digite aqui sua frase para analisarmos: ").lower()

# Conjuntos de letras que vamos analisar
vogais = "aeiou"
consoantes = "bcdfghjklmnpqrstvwxyz"

# VariÃ¡veis de contagem
total_vogais = 0
total_consoantes = 0
outros_caracteres = 0  # espaÃ§os, acentos, nÃºmeros, pontuaÃ§Ã£o etc.

# Percorre cada caractere da frase para analisar
for letra in frase:
    if letra in vogais:
        total_vogais += 1
    elif letra in consoantes:
        total_consoantes += 1
    else:
        outros_caracteres += 1

# Exibe os resultados para o usuÃ¡rio
print("\nğŸ“Š Resultado da anÃ¡lise:")
print(f"Vogais: {total_vogais}")
print(f"Consoantes: {total_consoantes}")
print(f"Outros (espaÃ§os, sÃ­mbolos, nÃºmeros...): {outros_caracteres}")

print("\nâœ… AnÃ¡lise finalizada. Volte sempre!")
