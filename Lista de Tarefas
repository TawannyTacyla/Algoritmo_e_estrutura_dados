tarefas = []
nome_da_lista = "Tarefas DiÃ¡rias"


def ver_tarefas():
    if not tarefas:
        print(f"Nenhuma tarefa em '{nome_da_lista}'.")
    else:
        print(f"\nğŸ“‹ {nome_da_lista}:")
        for i, tarefa in enumerate(tarefas):
            status = "âœ”ï¸ Feita" if tarefa['concluida'] else "â³ Pendente"
            print(f"{i}. {tarefa['descricao']} - {status}")
        print()


def adicionar_tarefa():
    desc = input("O que vocÃª precisa fazer? ")
    tarefas.append({'descricao': desc, 'concluida': False})
    print("Tarefa adicionada!")


def remover_tarefa():
    ver_tarefas()
    try:
        i = int(input("Qual tarefa vocÃª quer remover? (nÃºmero): "))
        removida = tarefas.pop(i)
        print(f"'{removida['descricao']}' foi removida.")
    except (ValueError, IndexError):
        print("NÃºmero invÃ¡lido. Tente de novo.")


def concluir_tarefa():
    ver_tarefas()
    try:
        i = int(input("Qual tarefa vocÃª concluiu? (nÃºmero): "))
        tarefas[i]['concluida'] = True
        print(f"Boa! '{tarefas[i]['descricao']}' marcada como feita!")
    except (ValueError, IndexError):
        print("NÃºmero invÃ¡lido. Tente de novo.")


def salvar_em_arquivo():
    with open("tarefas.txt", "w", encoding="utf-8") as f:
        for tarefa in tarefas:
            status = "1" if tarefa['concluida'] else "0"
            f.write(f"{status};{tarefa['descricao']}\n")
    print("Lista salva com sucesso.")


def carregar_do_arquivo():
    try:
        with open("tarefas.txt", "r", encoding="utf-8") as f:
            tarefas.clear()
            for linha in f:
                status, desc = linha.strip().split(";", 1)
                tarefas.append({'descricao': desc, 'concluida': status == "1"})
        print("Lista carregada.")
    except FileNotFoundError:
        print("Nenhum arquivo encontrado. ComeÃ§ando do zero.")


def menu():
    carregar_do_arquivo()

    while True:
        print(f"\n===== {nome_da_lista.upper()} =====")
        print("1. Ver tarefas")
        print("2. Adicionar nova tarefa")
        print("3. Remover tarefa")
        print("4. Marcar como concluÃ­da")
        print("5. Salvar lista")
        print("6. Sair")

        escolha = input("Escolha uma opÃ§Ã£o (1-6): ")

        if escolha == "1":
            ver_tarefas()
        elif escolha == "2":
            adicionar_tarefa()
        elif escolha == "3":
            remover_tarefa()
        elif escolha == "4":
            concluir_tarefa()
        elif escolha == "5":
            salvar_em_arquivo()
        elif escolha == "6":
            salvar_em_arquivo()
            print("Obrigado por usar sua lista! AtÃ© logo ğŸ‘‹")
            break
        else:
            print("OpÃ§Ã£o invÃ¡lida, tenta de novo.")

menu()
